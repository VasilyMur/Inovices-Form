.invoice__form__container {
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem;
    background: #fff;
    .invoice__form {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-gap: 1rem;
        button {
            background: #1E824C;
            border: 0;
            padding: 10px 15px;
            color: #fff;
        }
        &--item {
            .invoice-search {
                width: 100%;
                position: relative;
                input {
                    width: 100%;
                    padding: 5px;
                }
                ul {
                    width: 100%;
                    position: absolute;
                    padding: 0;
                    margin: 0;
                    text-align: left;
                    z-index: 2;
                    li {
                        list-style: none;
                        background: #fff;
                        padding: 5px;
                        border-bottom: 1px solid #ececec;
                    }
                }
            }
            display: flex;
            flex-direction: column;
        }
        .comment {
            grid-column: 1 / -1;
        }
        button {
            max-width: 200px;
        }
    }
}