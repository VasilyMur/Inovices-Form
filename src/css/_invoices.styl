.invoices__container {
    &--add {
        background: #fff;
        padding: 2rem;
        margin-bottom: 2rem;
        button {
            background: #446CB3;
            border: 0;
            padding: 10px 15px;
            color: #fff;
        }
    }
    &--list {
        .invoice__single {
            margin-bottom: 2rem;
            background: #fff;
            padding: 2rem;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1), 0 5px 10px rgba(0, 0, 0, 0.05);
            button {
                background: #D91E18;
                border: 0;
                padding: 10px 15px;
                color: #fff;
            }
            &--fields {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr))
                .invoice__single__item {
                    display: flex;
                    flex-direction: column;
                    .spanKey {
                        background: #888;
                        padding: 5px;
                        color: #fff;
                    }
                    .spanVal {
                        padding: 5px;
                    }
                }
            }


        }
    }
}